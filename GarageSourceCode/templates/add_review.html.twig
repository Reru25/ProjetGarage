{% extends 'base.html.twig' %}

{% block title %}Rédiger un avis{% endblock %}

{% block content %}
    <ul class='breadcrumbs'>
        <li class='breadcrumb'><a class='breadcrumb' href="/">Accueil ></a></li>
        <li class='breadcrumb'><a class='breadcrumb' href="/espace-personnel">Espace personnel ></a></li>
        <li class='breadcrumb'>Rédiger un avis</li>
    </ul>
    <div class='adaptive-container'>
        <div class='adaptive-list'>
            <h2 class='f-2 t-center'>Votre avis compte pour nous !</h2>
            <p class='f-1 padding-10'>(Votre commentaire sera ajouté après la moderation.)</p>
            {% if app.user.getReviews() %}
                <p class='f-1 padding-10'>Vous avez déjà laissé un avis. Vous pouvez le modifier si vous le souhaitez.</p>
            {% endif %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type='submit' class='btn padding-10'>
                Envoyer
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}